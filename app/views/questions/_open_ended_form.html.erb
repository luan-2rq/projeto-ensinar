<%= form_with url: "/questions/open_ended", method: :post do |form| %>
  <% if question.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(question.errors.count, "error") %> prohibited this question from being saved:</h2>

      <ul>
        <% question.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-12 mb-3">
    <%= form.label :description, "Question Description", style: "display: block", class: 'form-label' %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

    <div class="row justify-content-center mb-3">
      <div class="col-md-10 col-md-offset-4">
        <%= form.label :possible_reply, "Correct Answer", style: "display: block", class: 'form-label' %>
        <%= form.text_field :possible_reply, class: 'form-control' %>
      </div>
    </div>

    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
      <button class="btn btn-primary" type="submit" name="question_type" value="alternative">Add Alternative Question</button>
      <button class="btn btn-primary" type="submit" name="question_type" value="essay">Add Essay Question</button>
      <button class="btn btn-primary" type="submit" name="question_type" value="create_exam">Create Exam</button>
    </div>
<% end %>
