<%= render 'layouts/navbar_exam' %>

<div class="mt-5 mx-3">
    <h5 class="mx-5 my-0 py-0" style="color: #18A0FB;"> Question <%=params[:id].to_i+1%><h5>
    <hr class="mx-5 py-0"/>

    <div class="mx-5 px-3 mb-5 mt-3">
        <h4 style="color: #18A0FB;"><%=@question.description%></h4>
    </div>
</div>

<%= form_with url: @exam_attempt.id.to_s + '/question/' + @question.id.to_s, method: :post do |form| %>
    <div class="mx-5 px-5">
        <%= form.text_area :answer, :value => @reply.answer, class:"form-control mb-2 mr-sm-2 me-2 shadow", style: "background-color: #EAF8FF", rows: "17" %>
    </div>

    <div class="d-grid gap-2 d-md-flex justify-content-md-end mx-5 px-5 mt-5">
        <div class="mx-5 px-5">
            <div class="d-flex flex-row justify-content-start">
                <%= radio_button_tag :correct, true, class: "form-check-input", type: "radio", style: "transform: scale(2); "%> <p class="mx-3" style="color: #18A0FB;">Right</p>
            </div>
        </div>
        <div class="mx-5 px-5">
            <div class="d-flex flex-row justify-content-start">
                <%= radio_button_tag :correct, false, class: "form-check-input", type: "radio", style: "transform: scale(2); "%> <p class="mx-3" style="color: #18A0FB;">Wrong</p>
            </div>
        </div>
    </div>
    <div class="d-flex flex-row justify-content-end m-5">
        <% if @question.id != @number_of_questions %>
                <button class="btn" type="submit" style = "font-weight: bold; color: #ffffff; background-color: #18A0FB; border: none;">Next</button>
            <% else %>
                <button class="btn" type="submit" style = "font-weight: bold; color: #ffffff; background-color: #18A0FB; border: none;">Submit</button>
            <% end %>
        </div>
    <div>
<% end %>