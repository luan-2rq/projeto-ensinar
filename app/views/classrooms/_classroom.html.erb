<div class="row justify-content-center" id="<%= dom_id classroom %>">
  <div class="col mb-5">
    <div class="card p-5">
      <div class="row">
        <div class="col">
          <div class="d-flex flex-row justify-content-between">
            <h5 class="card-title"><%= classroom.name %></h5>
            <p>
              Class Code: <%= classroom.code %>
            </p>
          </div>
            <p class="col">
              <%= classroom.description %>
            </p>
        </div>
      </div>
      <div class="row">
        <div class="d-flex flex-row-reverse">
            <%= link_to "Visualizar", classroom, class: "btn btn-primary"%>
        </div>
      </div>
    </div>
  </div>
</div>
